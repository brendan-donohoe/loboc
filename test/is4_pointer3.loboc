unsigned empty;
signed[5][6][7] array1;

{
  signed count;
  signed i;
  count = i = 0;
  while( i < 5 ) {
    signed j;
    j = 0;    
    while( j < 6 ) {
      signed k;
      k = 0;    
      while( k < 7 ) {
        array1[k][j][i] = ++count;
	++k;
      }
      ++j;
    }
    ++i;
  }
}

{
  signed sum;
  signed i;
  signed[] pointer;

  sum = i = 0;
  pointer = &array1[0][0][0];
  
  while( i < 210 ) {
    sum = sum + pointer[];
    ++pointer;
    ++i;
  }
